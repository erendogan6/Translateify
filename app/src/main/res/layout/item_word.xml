<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="12dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Container for Word and Translation with Flags -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- English Word with Flag -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="4dp">

                <!-- English Flag Icon -->
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/england"
                    android:contentDescription="English Flag"
                    android:layout_marginEnd="8dp" />

                <!-- English Word Display -->
                <TextView
                    android:id="@+id/tvWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English Word"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- Turkish Translation with Flag -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Turkish Flag Icon -->
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/turkey"
                    android:contentDescription="Turkish Flag"
                    android:layout_marginEnd="8dp" />

                <!-- Turkish Translation Display -->
                <TextView
                    android:id="@+id/tvTranslation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Translation"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

        </LinearLayout>

        <!-- Checkmark Icon to Mark as Learned -->
        <ImageView
        android:id="@+id/ivCheckMark"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Mark as Learned"
        android:src="@drawable/ic_checkbox"
        android:padding="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="center"
        app:tint="@color/colorOnBackground" />

        <!-- Learn Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/colorSecondaryVariant"
            android:backgroundTint="@color/colorSecondaryVariant"
            android:stateListAnimator="@android:anim/accelerate_interpolator"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:clickable="true">

            <TextView
                android:id="@+id/buttonLearn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Öğren"
                android:textColor="@color/colorOnBackground"
                android:gravity="center"
                android:textSize="18sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:layout_gravity="center"/>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
